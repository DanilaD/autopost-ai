# Application
APP_NAME="Autopost AI (Testing)"
APP_ENV=testing
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=UTC
APP_URL=http://localhost

# Locale
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

# Database
DB_CONNECTION=sqlite
DB_DATABASE=:memory:

# Cache
CACHE_STORE=array
CACHE_PREFIX=

# Session
SESSION_DRIVER=array
SESSION_LIFETIME=120
SESSION_ENCRYPT=false

# Queue
QUEUE_CONNECTION=sync

# Mail
MAIL_MAILER=array
MAIL_FROM_ADDRESS=test@autopost.ai
MAIL_FROM_NAME="Autopost AI Test"

# Broadcasting
BROADCAST_CONNECTION=log

# Logging
LOG_CHANNEL=stderr
LOG_LEVEL=debug

# Third-party Services (Test/Mock)
# Stripe (use test mode keys)
STRIPE_KEY=pk_test_mock_key
STRIPE_SECRET=sk_test_mock_key
STRIPE_WEBHOOK_SECRET=whsec_test_mock_secret

# Instagram (mock)
INSTAGRAM_CLIENT_ID=test_client_id
INSTAGRAM_CLIENT_SECRET=test_client_secret

# OAuth (mock)
GOOGLE_CLIENT_ID=test_google_client_id
GOOGLE_CLIENT_SECRET=test_google_client_secret
GOOGLE_REDIRECT_URI="${APP_URL}/auth/google/callback"

# AI Services (mock)
OPENAI_API_KEY=sk-test-mock-openai-key
STABILITY_API_KEY=sk-test-mock-stability-key
LUMA_API_KEY=test-mock-luma-key
AI_SIDECAR_URL=http://localhost:8001

# AWS (mock for S3)
AWS_ACCESS_KEY_ID=test_access_key
AWS_SECRET_ACCESS_KEY=test_secret_key
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=test-bucket
AWS_USE_PATH_STYLE_ENDPOINT=true

# Redis (not used in testing)
REDIS_CLIENT=predis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Telescope (disabled in testing)
TELESCOPE_ENABLED=false

# Pulse (disabled in testing)
PULSE_ENABLED=false

# Horizon (not used in testing)
HORIZON_ENABLED=false

# Misc
BCRYPT_ROUNDS=4
